<!DOCTYPE html>
<html lang="en" ng-app="cajaApp">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <!-- optionally if you need a theme like font awesome theme you can include it as mentioned below -->

    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/font-awesome.min.css" rel="stylesheet">
    <link href="../css/datepicker3.css" rel="stylesheet">
    <link href="../css/styles.css" rel="stylesheet">

    <!--Custom Font-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <script src="../js/public/jquery.js"></script>
    <script src="../js/public/angular.js"></script>
    <script src="../js/public/sweet.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.9/js/fileinput.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body ng-controller="cajaController">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <span>App</span>Contratistas</a>
            </div>
        </div>
        <!-- /.container-fluid -->
    </nav>
    <% include ../partials/navegacion.ejs %>
        <!--/.sidebar-->

        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
            <div class="row">
                <ol class="breadcrumb">
                    <li class="">Inicio</li>
                    <li class="active">Obras</li>
                    <li class="active">Detalle Obra</li>
                </ol>
            </div>
            <!--/.row-->

            <div class="row" style="padding-top: 25px">
                <div class="col-lg-7 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Obra
                        </div>
                        <input type="text" id="idObra" value="<%= obra %>">
                        <div class="panel-body">
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Administrador de la obra</th>
                                        <th>Depositos totales</th>
                                        <th>Gastos totales</th>
                                        <th>Total</th>
                                        <!--<th>Direcci√≥n</th>-->
                                    </tr>
                                </thead>
                                <tbody>
                                    <td> {{obra.nombre}} </td>
                                    <td>{{obra.administrador.nombre}} {{obra.administrador.apellidos}}</td>
                                    <td>${{ depositosTotales | number }}</td>
                                    <td>${{ gastosTotales | number }}</td>
                                    <td>${{ total | number}}</td>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Deposito
                        </div>
                        <div class="panel-body">
                            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal ">
                                <div class="form-group row">
                                    <label class="col-md-3 form-control-label" for="descripcion">Monto</label>
                                    <div class="col-md-9">
                                        <input type="text" id="descripcion" name="descripcion" class="form-control" placeholder="Monto" ng-model="deposito.monto">
                                    </div>
                                </div>
                            </form>
                            <button ng-click="depositar()" class="btn btn-sm btn-primary">
                                <i class="fa fa-dot-circle-o"></i> Guardar deposito</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Gastos
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-block">
                                            <table class="table table-bordered table-striped table-condensed">
                                                <thead>
                                                    <tr>
                                                        <th>Descripcion</th>
                                                        <th>Precio</th>
                                                        <th>Cantidad</th>
                                                        <th>Total</th>
                                                        <th>Foto</th>
                                                        <th>Nota/Factura</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="gasto in gastos">
                                                        <td>{{ gasto.descripcion }}</td>
                                                        <td>${{ gasto.precio | number}}</td>
                                                        <td>{{ gasto.cantidad | number}}</td>
                                                        <td>${{ gasto.total | number}}</td>
                                                        <td>
                                                            <a href="http://localhost:8000/imagenes/{{gasto.imagen}}">Ver</a>
                                                        </td>
                                                        <td></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--/.main-->

        <script src="../js/public/bootstrap.min.js"></script>
        <script src="../js/public/chart.min.js"></script>
        <script src="../js/public/chart-data.js"></script>
        <script src="../js/public/easypiechart.js"></script>
        <script src="../js/public/easypiechart-data.js"></script>
        <script src="../js/public/bootstrap-datepicker.js"></script>
        <script src="../js/public/custom.js"></script>

        <script src="../js/views/cajachica.js"></script>
</body>

</html>